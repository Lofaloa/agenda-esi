<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Shows the detail of an angenda in a form. This view shows the agenda
    title, organizer and members. -->
    <record model="ir.ui.view" id="agenda_form_view">
        <field name="name">agenda.form</field>
        <field name="model">agenda_esi.agenda</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Go to calendar" type="object" name="show_calendar_action" class="oe_highlight" />
                    <button string="Graphs" type="object" name="show_graph_action" class="oe_highlight" />
                    <button string="Go to calendar" type="object" name="show_calendar_action" class="oe_highlight" />
                    <button string="Follow" type="object" name="follow" class="oe_highlight" />
                    <button string="Unfollow" type="object" name="unfollow" class="oe_highlight" />
                </header>
                <sheet>
                    <notebook string="Agenda">
                        <page string="Information">
                            <group>
                                <field name="title" />
                                <field name="organizer" />
                            </group>
                        </page>
                        <page string="Members">
                            <field name="members" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>